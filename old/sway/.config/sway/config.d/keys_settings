#
# Mode: Open Applications
#
mode "settings" {
  ### General
  bindsym b exec bar-reload; mode "default"
  bindsym Control+b exec bar-hide_toggle; mode "default"

  # Reload the configuration file
  bindsym w reload; mode "default"
  # Exit sway (logs you out of your Wayland session)
  bindsym Shift+w exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'


  # Return to default mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
