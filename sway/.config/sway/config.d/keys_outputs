#
### Mode: Output Devices
#
mode "outputs" {
  #
  # General
  #
  # Change focus to next output
  bindsym space focus output right ; mode "default"
  # Move workspace to next output
  bindsym w move workspace to output right ; mode "default"

  #
  # Scaling
  #
  bindsym Control+0 output - scale 0.25 ; mode "default"
  bindsym Shift+0 output - scale 0.5 ; mode "default"
  bindsym Shift+Control+0 output - scale 0.75 ; mode "default"

  bindsym 1 output - scale 1 ; mode "default"
  bindsym Control+1 output - scale 1.25 ; mode "default"
  bindsym Shift+1 output - scale 1.5 ; mode "default"
  bindsym Shift+Control+1 output - scale 1.75 ; mode "default"

  bindsym 2 output - scale 2 ; mode "default"
  bindsym Control+2 output - scale 2.25 ; mode "default"
  bindsym Shift+2 output - scale 2.5 ; mode "default"
  bindsym Shift+Control+2 output - scale 2.75 ; mode "default"

  bindsym 3 output - scale 3 ; mode "default"
  bindsym Control+3 output - scale 3.25 ; mode "default"
  bindsym Shift+3 output - scale 3.5 ; mode "default"
  bindsym Shift+Control+3 output - scale 3.75 ; mode "default"

  bindsym 4 output - scale 4 ; mode "default"
  bindsym Control+4 output - scale 4.25 ; mode "default"
  bindsym Shift+4 output - scale 4.5 ; mode "default"
  bindsym Shift+Control+4 output - scale 4.75 ; mode "default"

  bindsym 5 output - scale 5 ; mode "default"
  bindsym Control+5 output - scale 5.25 ; mode "default"
  bindsym Shift+5 output - scale 5.5 ; mode "default"
  bindsym Shift+Control+5 output - scale 5.75 ; mode "default"

  bindsym 6 output - scale 6 ; mode "default"
  bindsym Control+6 output - scale 6.25 ; mode "default"
  bindsym Shift+6 output - scale 6.5 ; mode "default"
  bindsym Shift+Control+6 output - scale 6.75 ; mode "default"

  bindsym o output - dpms toggle ; mode "default"
  bindsym Shift+o output - toggle ; mode "default"

  # Return to default mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
