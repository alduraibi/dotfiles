#
# Mode: Workspaces
#
mode "workspaces" {
  ### General
  # bitwarden
  bindsym b workspace number $w_bitwarden ; mode "default"
  bindsym Shift+b move container to workspace number $w_bitwarden ; workspace number $w_bitwarden ; mode "default"
  ### Media
  # spotify
  bindsym s workspace number $w_spotify ; mode "default"
  bindsym Shift+s move container to workspace number $w_spotify ; workspace number $w_spotify ; mode "default"
  # vimiv
  bindsym i workspace number $w_vimiv ; mode "default"
  bindsym Shift+i move container to workspace number $w_vimiv ; workspace number $w_vimiv ; mode "default"
  # mpv
  bindsym v workspace number $w_mpv ; mode "default"
  bindsym Shift+v move container to workspace number $w_mpv ; workspace number $w_mpv ; mode "default"
  # jellyfin
  bindsym j workspace number $w_jellyfin ; mode "default"
  bindsym Shift+j move container to workspace number $w_jellyfin ; workspace number $w_jellyfin ; mode "default"

  ### Social
  # discord
  bindsym d workspace number $w_discord ; mode "default"
  bindsym Shift+d move container to workspace number $w_discord ; workspace number $w_discord ; mode "default"
  # signal
  bindsym g workspace number $w_signal ; mode "default"
  bindsym Shift+g move container to workspace number $w_signal ; workspace number $w_signal ; mode "default"
  # telegram
  bindsym t workspace number $w_telegram ; mode "default"
  bindsym Shift+t move container to workspace number $w_telegram ; workspace number $w_telegram ; mode "default"
  # element
  bindsym e workspace number $w_element ; mode "default"
  bindsym Shift+e move container to workspace number $w_element ; workspace number $w_element ; mode "default"
  # whatsapp
  bindsym w workspace number $w_whatsapp ; mode "default"
  bindsym Shift+w move container to workspace number $w_whatsapp ; workspace number $w_whatsapp ; mode "default"
  # zoom
  bindsym z workspace number $w_zoom ; mode "default"
  bindsym Shift+z move container to workspace number $w_zoom ; workspace number $w_zoom ; mode "default"


  bindsym 1 workspace number $w_ext1 ; mode "default"
  bindsym 2 workspace number $w_ext2 ; mode "default"
  bindsym 3 workspace number $w_ext3 ; mode "default"
  bindsym 4 workspace number $w_ext4 ; mode "default"
  bindsym 5 workspace number $w_ext5 ; mode "default"
  bindsym 6 workspace number $w_ext6 ; mode "default"
  bindsym 7 workspace number $w_ext7 ; mode "default"
  bindsym 8 workspace number $w_ext8 ; mode "default"
  bindsym 9 workspace number $w_ext9 ; mode "default"
  bindsym 0 workspace number $w_ext0 ; mode "default"
  bindsym Shift+1 move container to workspace number $w_ext1 ; workspace number $w_ext1 ; mode "default"
  bindsym Shift+2 move container to workspace number $w_ext2 ; workspace number $w_ext2 ; mode "default"
  bindsym Shift+3 move container to workspace number $w_ext3 ; workspace number $w_ext3 ; mode "default"
  bindsym Shift+4 move container to workspace number $w_ext4 ; workspace number $w_ext4 ; mode "default"
  bindsym Shift+5 move container to workspace number $w_ext5 ; workspace number $w_ext5 ; mode "default"
  bindsym Shift+6 move container to workspace number $w_ext6 ; workspace number $w_ext6 ; mode "default"
  bindsym Shift+7 move container to workspace number $w_ext7 ; workspace number $w_ext7 ; mode "default"
  bindsym Shift+8 move container to workspace number $w_ext8 ; workspace number $w_ext8 ; mode "default"
  bindsym Shift+9 move container to workspace number $w_ext9 ; workspace number $w_ext9 ; mode "default"
  bindsym Shift+0 move container to workspace number $w_ext0 ; workspace number $w_ext0 ; mode "default"


  # Return to default mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
